package Solutions;

public class IntToString {
	
	public String intToString(int var){
		if(var == 0)
			return "0";
		
		StringBuilder sb = new StringBuilder();
		while(var >= 1){
			int i = var % 10;
			var = var/10;
			sb.append(i);
		}
		
		return sb.reverse().substring(0);
	}
	
	public static void main(String[] args){
		IntToString obj = new IntToString();
		int var = 1234;
		System.out.println("Integer to String: " + obj.intToString(var));
	}

}


